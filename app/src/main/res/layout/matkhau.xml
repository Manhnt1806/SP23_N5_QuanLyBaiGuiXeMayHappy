<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:id="@+id/mk"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/img" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="520dp"
        android:background="#C9CBCC"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iconU"
            android:layout_width="44dp"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:background="#FFFFFF"
            android:src="@drawable/img_1" />

        <EditText
            android:id="@+id/edtuser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/iconU"
            android:background="#FFFFFF"
            android:hint="Nhập tài khoản"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtpass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/iconU"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/iconP"
            android:background="#FFFFFF"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iconP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/iconU"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="#787878"
            android:src="@drawable/img_2" />

        <EditText
            android:id="@+id/edtpassre1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/iconP"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/iconPre1"
            android:background="#FFFFFF"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iconPre1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/iconP"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="#8BC34A"
            android:src="@drawable/img_3" />

        <EditText
            android:id="@+id/edtpassre2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/iconPre1"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/iconPre2"
            android:background="#FFFFFF"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iconPre2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/iconPre1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFC107"
            android:src="@drawable/img_3" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="115dp"
            android:layout_height="58dp"
            android:layout_below="@id/iconPre2"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#80807F"
            android:text="Hủy"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconPre2"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:layout_toRightOf="@id/btnHuy"
            android:backgroundTint="#80807F"
            android:text="Đổi mật khẩu"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>