<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbartaikhoan"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="ID Khách hàng"
            android:textSize="20dp"
            android:textColor="#B00020"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:hint="Số ID Khach hang"
            android:ems="10"
            android:background="@android:color/transparent"
            android:id="@+id/edt_id_khachhang"
            android:textColor="#B00020"
            android:textColorHint="#AAAAAA"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#AAAAAA"
        android:layout_height="1dp">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Họ tên:"
            android:textSize="20dp"
            android:textColor="#B00020"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:hint="Nhập họ tên KH"
            android:ems="10"
            android:background="@android:color/transparent"
            android:id="@+id/edt_tenkh"
            android:textColor="#B00020"
            android:textColorHint="#AAAAAA"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#AAAAAA"
        android:layout_height="1dp">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Giới tính:"
            android:textSize="20dp"
            android:textColor="#B00020"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:hint="Nhập giới tính"
            android:textColor="#B00020"
            android:background="@android:color/transparent"
            android:id="@+id/edt_gioitinh"
            android:textColorHint="#AAAAAA"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#AAAAAA"
        android:layout_height="1dp">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="SĐT"
            android:textSize="20dp"
            android:textColor="#B00020"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="280dp"
            android:hint="Nhập SĐT khách hàng"
            android:id="@+id/edt_sdt_khachhang"
            android:enabled="false"
            android:textColor="#B00020"
            android:background="@android:color/transparent"
            android:textColorHint="#AAAAAA"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Địa chỉ:"
            android:textSize="20dp"
            android:textColor="#B00020"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="280dp"
            android:hint="Nhập địa chỉ Khách hàng"
            android:id="@+id/edt_diachiKH"
            android:enabled="false"
            android:textColor="#B00020"
            android:background="@android:color/transparent"
            android:textColorHint="#AAAAAA"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#AAAAAA"
        android:layout_height="1dp">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Số CCCD:"
            android:textSize="20dp"
            android:textColor="#B00020"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_soCCCD"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:hint="User nhân viên"
            android:textColor="#B00020"
            android:textColorHint="#AAAAAA" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Số dư TK: "
            android:textSize="20dp"
            android:textColor="#B00020"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/soduTK"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:hint="số dư"
            android:textColor="#B00020"
            android:textColorHint="#AAAAAA" />

    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:text="Thêm"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_themKH"
        android:textColor="#B00020"
        android:background="#AAAAAA"
        android:layout_height="wrap_content" />
</LinearLayout>