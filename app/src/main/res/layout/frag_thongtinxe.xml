<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbarbaixe"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="ID xe"
            android:textSize="20dp"
            android:textColor="#B00020"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:hint="Số ID xe"
            android:ems="10"
            android:background="@android:color/transparent"
            android:id="@+id/edt_id"
            android:textColor="#B00020"
            android:textColorHint="#AAAAAA"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#AAAAAA"
        android:layout_height="1dp">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Tên xe"
            android:textSize="20dp"
            android:textColor="#B00020"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:hint="Nhập tên xe"
            android:ems="10"
            android:background="@android:color/transparent"
            android:id="@+id/edthemtenxe"
            android:textColor="#B00020"
            android:textColorHint="#AAAAAA"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#AAAAAA"
        android:layout_height="1dp">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Biển số xe"
            android:textSize="20dp"
            android:textColor="#B00020"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:hint="Nhập biển số xe"
            android:textColor="#B00020"
            android:background="@android:color/transparent"
            android:id="@+id/edthembienso"
            android:textColorHint="#AAAAAA"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#AAAAAA"
        android:layout_height="1dp">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="ID Khách hàng"
            android:textSize="20dp"
            android:textColor="#B00020"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="280dp"
            android:hint="ID Khách hàng"
            android:id="@+id/edt_id_khachhang"
            android:enabled="false"
            android:textColor="#B00020"
            android:background="@android:color/transparent"
            android:textColorHint="#AAAAAA"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#AAAAAA"
        android:layout_height="1dp">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Đăng Ký Xe"
            android:textSize="20dp"
            android:textColor="#B00020"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/upload_dkx"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:hint="Giấy Đăng Ký xe"
            android:textColor="#B00020"
            android:textColorHint="#AAAAAA" />
        <ImageButton
            android:layout_width="30dp"
            android:background="@drawable/ic_upload_anh"
            android:id="@+id/themanh"
            android:scaleType="fitXY"
            android:layout_height="30dp" />
    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:text="Thêm"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:id="@+id/btndongythemxe"
        android:textColor="#B00020"
        android:background="#AAAAAA"
        android:layout_height="wrap_content" />
</LinearLayout>